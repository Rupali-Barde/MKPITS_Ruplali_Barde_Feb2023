@{
}
@model WebApplication21.Models.Login
@using(Html.BeginForm("Index","Login",FormMethod.Post))
{

<h2>SignUp Form</h2>
<br/>
<span>username:</span>@Html.TextBoxFor(m=>m.username)
<br/>
<span>password:</span>@Html.TextBoxFor(m=>m.password)
<br/>
<span>email:</span>@Html.TextBoxFor(m=>m.email)
<br/>
<span>Male:</span>@Html.RadioButtonFor(m=>m.gender,"male")
<br/>
<span>Female:</span>@Html.RadioButtonFor(m=>m.gender,"female")
<br/>
<span>subject1:</span>@Html.CheckBoxFor(m=>m.subject1,true)
<br/>
<span>subject2:</span>@Html.CheckBoxFor(m=>m.subject2,false)
<br/>
<input type="submit" value="OK" />
}

<hr/>
<h2>SignUp Details</h2>
username:@ViewBag.username<br/>
password:@ViewBag.password<br/>
email:@ViewBag.email<br/>
gender:@ViewBag.gender<br/>
subject1:@ViewBag.subject1<br/>
subject2:@ViewBag.subject2<br/>
<br/>

